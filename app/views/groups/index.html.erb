<h1>Список групп</h1>

<table>
  <thead>
    <tr>
      <th>Название</th>
      <th>Состояние</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @groups.each do |group| %>
      <tr>
        <td><%= group.name %></td>
        <td><%= group.account_state %></td>
        <td><%= link_to 'Просмотр', group %></td>
        <td><%= link_to 'Редактирование', edit_group_path(group) %></td>
        <td><%= link_to 'Удаление', group, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

