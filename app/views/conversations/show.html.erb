<p>
  <strong>Subject:</strong>
  <%= @conversation.subject %>
</p>

<% @recipients.each do |recipient| %>
    <p>
      <strong>Body:</strong>
      <%= recipient.message.body %><br />
      <strong>Author:</strong>
      <%= User.find(recipient.author_id).last_name %>
    </p>
    <br />
<% end %>

<br>
<br>
<%= form_for @message, url: @conversation, method: :put do |f| %>
    <div class="field">
      <%= f.label :body %><br>
      <%= f.text_area :body %>
    </div>
    <div class="actions">
      <%= f.submit 'Отправить' %>
    </div>
<% end %>

<%= link_to 'Back', conversations_path %>
